{
	"compilerOptions": {
		"esModuleInterop": true,
		"jsx": "react",
		"lib": ["esnext", "dom"],
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2017",
		"types": ["jest", "react", "react-dom"],
		"typeRoots": ["node_modules/@types", "src/@types"]
	},
	"include": ["src"],
	"exclude": ["**/*.test"]
}
